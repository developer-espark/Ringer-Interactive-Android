<resources>

    <style name="Chooloo" />

    <!--region text -->
    <style name="Chooloo.Text" parent="android:TextAppearance">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="Chooloo.Text.Headline2">
        <item name="android:textSize">@dimen/headline_2</item>
    </style>

    <style name="Chooloo.Text.Headline3">
        <item name="android:textSize">@dimen/headline_3</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
    </style>

    <style name="Chooloo.Text.Headline4">
        <item name="android:textSize">@dimen/headline_4</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="Chooloo.Text.Subtitle1">
        <item name="android:textSize">@dimen/subtitle_1</item>
    </style>

    <style name="Chooloo.Text.Subtitle2">
        <item name="android:textSize">@dimen/subtitle_2</item>
        <item name="android:textColor">?colorTextDisabled</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="Chooloo.Text.Caption" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/caption_1</item>
        <item name="android:textColor">?colorTextDisabled</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <!--endregion-->

    <!--region button -->

    <!--endregion-->

    <!--region icon button-->
    <style name="Chooloo.IconButton" parent="Widget.Design.FloatingActionButton">
        <item name="borderWidth">0dp</item>
    </style>

    <style name="Chooloo.IconButton.Big" parent="Chooloo.IconButton">
        <item name="size">big</item>
    </style>

    <!--region image view -->
    <style name="Chooloo.Image" />

    <style name="Chooloo.Image.Profile">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <!--endregion-->

    <!--region bottom dialog -->
    <style name="Chooloo.BottomDialog"/>

    <style name="Chooloo.BottomDialog.BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/Chooloo.BottomDialog.ShapeAppearanceOverlay</item>
        <item name="behavior_peekHeight">600dp</item>
    </style>

    <style name="Chooloo.BottomDialog.ShapeAppearanceOverlay">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="cornerSize">@dimen/corner_radius</item>
        <!--        <item name="cornerSizeTopLeft">@dimen/corner_radius</item>-->
        <!--        <item name="cornerSizeTopRight">@dimen/corner_radius</item>-->
        <item name="cornerFamily">rounded</item>
    </style>
    <!--endregion-->

    <!--region list view -->
    <style name="Chooloo.ListView" parent="Widget.AppCompat.ListView">
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingMode">fade_in_out</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:scrollbars">none</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:divider">@android:color/transparent</item>
    </style>

    <style name="Chooloo.FastScrollView" parent="Chooloo.ListView">
        <item name="bubbleColor">?colorSecondary</item>
        <item name="bubbleTextColor">?colorOnSecondary</item>
        <item name="handleColor">?colorSecondary</item>
    </style>
    <!--endregion-->

    <!--region dialpad -->

    <!--endregion-->

    <!--region call -->
    <style name="Chooloo.Call" />

    <style name="Chooloo.Call.Layout">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Chooloo.Call.Text">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Chooloo.Call.Text.Status">
        <item name="android:textAppearance">@style/Chooloo.Text.Subtitle1</item>
    </style>

    <style name="Chooloo.Call.Text.Time">
        <item name="android:textAppearance">@style/Chooloo.Text.Caption</item>
    </style>

    <style name="Chooloo.Call.Text.Name">
        <item name="android:textAppearance">@style/Chooloo.Text.Headline2</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--endregion-->

    <!--region appbar -->

    <!--endregion-->

    <!--region contact-->
    <style name="Chooloo.Bottom" />

    <style name="Chooloo.Bottom.Image">
        <item name="android:src">@drawable/round_person_24</item>
    </style>

    <!--region shape appearance -->

    <!--endregion-->
</resources>
